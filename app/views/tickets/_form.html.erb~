<%= form_for [@project, @ticket], :html => { :multipart => true } do |f| %>
	<%= f.error_messages %>
	<p>
		<%= f.label :title %>
		<%= f.text_field :title %>
		<%= f.label :description %>
		<%= f.text_area :description %>
		<% number = 0 %>
		<%= f.fields_for :assets do |asset| %>
			<p>
				<% p "File ##{number += 1 }" %>
				<%= asset.label :asset, "File" %>
				<%= asset.file_field :asset %>
			</p>
		<% end %>
		<%= f.submit %>
	</p>

<% end %>
