<%= form_for [@project, @ticket], :html => { :multipart => true } do |f| %>
	<%= f.error_messages %>
	<p>
		<%= f.label :title %>
		<%= f.text_field :title %>
		<%= f.label :description %>
		<%= f.text_area :description %>
		<% number = 0 %>
		<div id = 'files'>
			<%= render :partial => "files/form", :locals => { :number => number } %>
		</div>
		<%= link_to "Add another file", new_file_path, :remote => true, :update => "files", :position => "after" %>
		<%= f.submit %>
	</p>

<% end %>
