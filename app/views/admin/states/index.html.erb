<h3>States</h3>
<%= link_to "New State", new_admin_state_path %>
<ul>
	<% for state in @states %>
		<li id='state_<%= state.id %>'>
			<%= state.name %>
			<% if state.default? %>
				(Default)
			<% else %>
				<%= link_to "Make Default", make_default_admin_state_path(state) %>
			<% end %>
		</li>
	<% end %>
</ul>
